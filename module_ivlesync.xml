<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ivlesync" default="compile.module.ivlesync">
  <dirname property="module.ivlesync.basedir" file="${ant.file.module_ivlesync}"/>
  
  <property name="module.jdk.home.ivlesync" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ivlesync" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ivlesync" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ivlesync" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="ivlesync.output.dir" value="${module.ivlesync.basedir}/target/classes"/>
  <property name="ivlesync.testoutput.dir" value="${module.ivlesync.basedir}/target/test-classes"/>
  
  <path id="ivlesync.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ivlesync.module.production.classpath">
    <path refid="${module.jdk.classpath.ivlesync}"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-databind:2.9.4.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-core:2.9.4.classpath"/>
    <path refid="library.maven:_com.jfoenix:jfoenix:8.0.1.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.0.classpath"/>
  </path>
  
  <path id="ivlesync.runtime.production.module.classpath">
    <pathelement location="${ivlesync.output.dir}"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-databind:2.9.4.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-core:2.9.4.classpath"/>
    <path refid="library.maven:_com.jfoenix:jfoenix:8.0.1.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.0.classpath"/>
  </path>
  
  <path id="ivlesync.module.classpath">
    <path refid="${module.jdk.classpath.ivlesync}"/>
    <pathelement location="${ivlesync.output.dir}"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-databind:2.9.4.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-core:2.9.4.classpath"/>
    <path refid="library.maven:_com.jfoenix:jfoenix:8.0.1.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.0.classpath"/>
  </path>
  
  <path id="ivlesync.runtime.module.classpath">
    <pathelement location="${ivlesync.testoutput.dir}"/>
    <pathelement location="${ivlesync.output.dir}"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-databind:2.9.4.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-core:2.9.4.classpath"/>
    <path refid="library.maven:_com.jfoenix:jfoenix:8.0.1.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.ivlesync">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ivlesync">
    <patternset refid="excluded.from.module.ivlesync"/>
  </patternset>
  
  <path id="ivlesync.module.sourcepath">
    <dirset dir="${module.ivlesync.basedir}">
      <include name="src/java"/>
      <include name="src/java/main/resources"/>
    </dirset>
  </path>
  
  <path id="ivlesync.module.test.sourcepath">
    <dirset dir="${module.ivlesync.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ivlesync" depends="compile.module.ivlesync.production,compile.module.ivlesync.tests" description="Compile module IVLESync"/>
  
  <target name="compile.module.ivlesync.production" depends="register.custom.compilers" description="Compile module IVLESync; production classes">
    <mkdir dir="${ivlesync.output.dir}"/>
    <javac2 destdir="${ivlesync.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ivlesync}/javac">
      <compilerarg line="${compiler.args.ivlesync}"/>
      <bootclasspath refid="ivlesync.module.bootclasspath"/>
      <classpath refid="ivlesync.module.production.classpath"/>
      <src refid="ivlesync.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ivlesync"/>
    </javac2>
    
    <copy todir="${ivlesync.output.dir}">
      <fileset dir="${module.ivlesync.basedir}/src/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.ivlesync.basedir}/src/java/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ivlesync.tests" depends="register.custom.compilers,compile.module.ivlesync.production" description="compile module IVLESync; test classes" unless="skip.tests">
    <mkdir dir="${ivlesync.testoutput.dir}"/>
    <javac2 destdir="${ivlesync.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ivlesync}/javac">
      <compilerarg line="${compiler.args.ivlesync}"/>
      <bootclasspath refid="ivlesync.module.bootclasspath"/>
      <classpath refid="ivlesync.module.classpath"/>
      <src refid="ivlesync.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.ivlesync"/>
    </javac2>
    
    <copy todir="${ivlesync.testoutput.dir}">
      <fileset dir="${module.ivlesync.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.ivlesync" description="cleanup module">
    <delete dir="${ivlesync.output.dir}"/>
    <delete dir="${ivlesync.testoutput.dir}"/>
  </target>
</project>